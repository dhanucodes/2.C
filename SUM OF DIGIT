#include<stdio.h>
        int sum(int);
        int sum(int a){
            int sum=0;
            int b;
            while(a>0)
                {
                    b=a%10;
                    a=a/10;
                    sum=sum+b;
                }
            return sum;
    }
   void main()
   {
       int a;
       int sum1=0;
       while(1)
        {
            printf("enter any number");
            scanf("%d",&a);
       if(a==0)
        break;
       else
        sum1=sum1+sum(a);
        }
       printf("%d result",sum1);
   }



